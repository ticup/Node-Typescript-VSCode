    "version": "0.0.1",
    "tasks": [
      {
        "type": "npm",
        "script": "install:typescript",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "type": "npm",
        "script": "watch",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$tsc-watch"
        ],
        "isBackground": true,
        "runOptions": {
          "runOn": "folderOpen"
        }
      }
    ]
  }